{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "lib": [
            "ES2015",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ]
}